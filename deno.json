{
  "tasks": {
    "cli": "deno run --allow-read --allow-write --allow-run ./cli.ts",
    "build-binary:linux_arm64": "deno compile --target aarch64-unknown-linux-gnu --output ./bin/cli_linux_arm64 --allow-read --allow-write ./cli.ts",
    "build-binary:linux_x86_64": "deno compile --target x86_64-unknown-linux-gnu --output ./bin/cli_linux_x86_64 --allow-read --allow-write ./cli.ts",
    "build-binary:macos_arm64": "deno compile --target aarch64-apple-darwin --output ./bin/cli_macos_arm64 --allow-read --allow-write ./cli.ts",
    "build-binary:macos_x86_64": "deno compile --target x86_64-apple-darwin --output ./bin/cli_macos_x86_64 --allow-read --allow-write ./cli.ts",
    "build-binary:windows": "deno compile --target x86_64-pc-windows-msvc --output ./bin/cli_windows.exe --allow-read --allow-write ./cli.ts",
    "build-binary:all": "deno task build-binary:linux_arm64 && deno task build-binary:linux_x86_64 && deno task build-binary:macos_arm64 && deno task build-binary:macos_x86_64 && deno task build-binary:windows"
  },
  "imports": {
    "@/": "./src/",
    "@std/assert": "jsr:@std/assert@^1.0.8",
    "@std/cli": "jsr:@std/cli@^1.0.6"
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 80,
    "indentWidth": 4,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["src/"],
    "exclude": ["src/**/*.txt"]
  }
}
